{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch Full Application",
      "type": "chrome",
      "request": "launch",
      "preLaunchTask": "Start Backend and Frontend",
      "url": "http://localhost:4200",
      "webRoot": "${workspaceFolder}/frontend/werewolves-app",
      "sourceMapPathOverrides": {
        "webpack:/*": "${webRoot}/*",
        "/./*": "${webRoot}/*",
        "/src/*": "${webRoot}/*",
        "/*": "*",
        "/./~/*": "${webRoot}/node_modules/*"
      }
    }
  ]
}
